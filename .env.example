# Random Image Server Configuration

# Directory containing your images (absolute path or relative to docker-compose.yml)
IMAGE_DIR=./images

# Server port
PORT=80

# Image display settings
IMAGE_WIDTH=800
IMAGE_HEIGHT=600

# Rate limiting (requests per minute)
RATE_LIMIT=30

# Server name (domain or IP)
SERVER_NAME=localhost

# Security settings
ENABLE_HTTPS=false
# Set to true to enable HTTPS (requires certificates)

# If using HTTPS, specify certificate paths
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem